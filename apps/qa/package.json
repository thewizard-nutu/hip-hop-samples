{
  "name": "hip-hop-samples-marketplace-qa",
  "version": "1.0.0",
  "description": "QA Test Suite for Hip-Hop Samples Marketplace",
  "private": true,
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --coverage --config jest.config.js",
    "test:unit:watch": "jest --watch --config jest.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:integration": "jest --config jest.integration.config.js",
    "test:a11y": "playwright test tests/a11y --reporter=html",
    "test:performance": "playwright test tests/performance --reporter=html",
    "test:coverage": "jest --coverage --config jest.config.js --collectCoverageFrom=\"src/**/*.{ts,tsx}\"",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:a11y && npm run test:performance",
    "playwright:install": "playwright install",
    "test:report": "npx playwright show-report"
  },
  "devDependencies": {
    "@axe-core/react": "^4.7.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "axe-core": "^4.7.2",
    "axe-playwright": "^1.2.3",
    "express": "^5.2.1",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-extended": "^3.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
