# Hip-Hop Samples Marketplace
# Environment Variables Template

# ========== BACKEND ========== 
# apps/backend/.env
MONGODB_URI=mongodb://admin:mongodb123@localhost:27017/hiphopdrumsdb?authSource=admin
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
NODE_ENV=development
PORT=3001

# Stripe (get from https://dashboard.stripe.com/test/keys)
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 (for sample storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_BUCKET_NAME=hip-hop-samples-bucket
AWS_SIGNED_URL_EXPIRY=86400

# ========== FRONTEND ==========
# apps/frontend/.env.local
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_public_key

# ========== QA/TESTING ==========
# apps/qa/.env (if needed)
API_BASE_URL=http://localhost:3001
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
